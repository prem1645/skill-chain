{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache --ignore-path .gitignore --log-level silent",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache --ignore-path .gitignore --log-level silent",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.4",
    "@orpc/client": "^1.9.0",
    "@orpc/openapi": "^1.9.0",
    "@orpc/server": "^1.9.0",
    "@orpc/zod": "^1.9.0",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.3.18",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "ethers": "^6.13.5",
    "hono": "^4.9.8",
    "ipfs-http-client": "^60.0.1",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.15.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
